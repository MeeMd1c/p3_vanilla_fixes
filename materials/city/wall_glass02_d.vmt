"Refract"

{
//	"$model" 1
	"$bluramount" "1"
	"$surfaceprop" "glass"
	"$refractamount" ".05" //сила преломления. Чем больше - тем больше то что за стеклом сместиться относительно реальной позиции, .1 = 10%
	"$REFRACTTINT" "{230 212 199}" //значения в RGB - т.е. какого больше цвета пропускает стекло, в данном случае - красно-оранжевого, того цвета оно и будет в игре.
	"$scale" "[1 1]" //бесполезный параметер, один фиг в хаммере перетягивать по месту.
	"$normalmap" "city/city_glass02_normal" //карта высот, отвечающая за рельеф стекла (рельеф роляет - все искажаеться в соответсвии с ним).
	"$dudvmap" "de_nature/glass/glass04_dudv" //рельеф стекла для старых видиокарт.
	"$envmap" "env_cubemap" //если нужно - можно отражения кубымапы прикрутить к стеклу, если нет - можно не писать эту строку вообще
	"$envmaptint" "[.3 .3 .3]" //сила отражения кубымапы
	"%tooltexture" "city/city_glass02_normal"
}
